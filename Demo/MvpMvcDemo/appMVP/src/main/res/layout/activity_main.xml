<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.mvpmvcdemo.view.MainActivity">

    <TextView
        android:id="@+id/titlt_username"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="用户名："
        android:textSize="25sp"
        android:gravity="right"/>
    <TextView
        android:id="@+id/title_password"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="密码："
        android:textSize="25sp"
        android:gravity="right"
        android:layout_below="@id/titlt_username"
        android:layout_alignBottom="@id/title_password"/>
    <EditText
        android:id="@+id/user_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/titlt_username"
        android:lines="1"/>
    <EditText
        android:id="@+id/password"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name"
        android:layout_toRightOf="@id/title_password"
        android:lines="1"/>
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_alignLeft="@id/password"
        android:layout_below="@id/password"/>
    <Button
        android:id="@+id/btnClear"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:layout_toRightOf="@id/btnLogin"
        android:layout_below="@id/password"/>
</RelativeLayout>
